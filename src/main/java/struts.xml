<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" 
	"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="StudentRegistration" extends="struts-default">
    	<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		
		<action name="login" class="action.LoginAction" method="execute">
            <result name="success" type="tiles">home</result>
        </action>
        <action name="check" class="action.AdminCheckAction" method="execute">
            <result name="success" type="tiles">check</result>
        </action>
        <action name="showDetails" class="action.AdminCheckAction" method="showStudentDetails">
            <result name="success" type="tiles">show_details</result>
        </action>
        <action name="insert" class="action.AdminEnrollStudentAction" method="execute">
            <result name="success" type="tiles">insert</result>
        </action>
        <action name="search" class="action.AdminSearchAction" method="display">
            <result name="success" type="tiles">search</result>
        </action>
        <action name="filter" class="action.AdminSearchAction" method="execute">
            <result name="success" type="tiles">filter_result</result>
        </action>
    </package>
</struts>
