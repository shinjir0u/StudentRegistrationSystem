<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" 
	"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="StudentRegistration" extends="struts-default">
    	<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
        
        
        <action name="studentEnroll" class="student.controller.StudentAddAction" method="addStudentToHashmap">
        	<result name="success">/hashMapSuccess.jsp</result>
        </action>
        
        <action name="adminEnrollTest" class="student.controller.StudentAddAction">
        	<result name="success">/viewPages/admin/AdminEnrollPage.jsp</result>
        </action> 
        <action name="adminEnroll" class="student.controller.StudentAddAction" method="addStudentToDatabase">
        	<result name="success">/databaseSuccess.jsp</result>
        </action>
        <action name="adminRetrieveTest" class="student.controller.StudentRetrieveAction" method="retrieveStudent">
        	<result name="success">/viewPages/admin/AdminStudentCheckPage.jsp</result>
        </action>
        
        <!-- for admin -->
        
        <action name="check" class="admin.action.AdminCheckAction" method="execute">
            <result name="success" type="tiles">check</result>
        </action>
        
        <action name="showDetails" class="admin.action.AdminCheckAction" method="showStudentDetails">
            <result name="success" type="tiles">show_details</result>
        </action>
        
        <action name="insert" class="admin.action.AdminEnrollStudentAction" method="execute">
            <result name="success" type="tiles">insert</result>
        </action>
        
        <action name="search" class="admin.action.AdminSearchAction" method="display">
            <result name="success" type="tiles">search</result>
        </action>
        
        <action name="filter" class="admin.action.AdminSearchAction" method="execute">
            <result name="success" type="tiles">filter_result</result>
        </action>
       	
       	<!-- for student -->
        
        <action name="studentViewProfile" class="student.action.StudentViewProfileAction" method="execute">
            <result name="success" type="tiles">student_view_profile</result>
        </action>
        
        <action name="studentEnroll" class="student.action.StudentEnrollAction" method="execute">
            <result name="success" type="tiles">student_enroll</result>
        </action>
        
        <action name="studentContact" class="student.action.StudentContactAction" method="execute">
            <result name="success" type="tiles">student_contact</result>
        </action>
        
        <!-- for both admin and student -->
        <action name="login" class="action.LoginAction" method="execute">
            <result name="student_success" type="tiles" >student_home</result>
            <result name="admin_success" type="tiles">admin_home</result>
        </action>
        
    </package>
</struts>
